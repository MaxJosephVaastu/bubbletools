ParameterDefault("Button", "image", "DownState");    						newDefault("IconTextColor")[0] =  new ParameterDefault("Icon", "color", "TextColor");  						newDefault("PanelButtonDefaultState")[0] = new ParameterDefault("PanelItem", "image", "ButtonDefaultState");   		  	newDefault("PanelButtonOverState")[0] = new ParameterDefault("PanelItem", "image", "ButtonOverState");   			newDefault("PanelButtonDownState")[0] = new ParameterDefault("PanelItem", "image", "ButtonDownState");     			newDefault("TitleBarTextColor")[0] = new ParameterDefault("Window", "color", "TitleTextColor");			newDefault("TitleBarBackground")[0] = new ParameterDefault("Window", "image", "TitleBarBackground");			newDefault("TitleBarFont")[0] = new ParameterDefault("Window", "font", "TitleFont");			newDefault("TitleBarFontSize")[0] = new ParameterDefault("Window", "size", "TitleFontSize");								newDefault("WindowBackgroundColor")[0] = new ParameterDefault("Window", "color", "Color");			newDefault("ScrollBarImage")[0] = new ParameterDefault("Window", "image", "ScrollBarImage");			newDefault("ScrollBarSliderImage")[0] = new ParameterDefault("Window", "image", "ScrollBarSliderImage");     			newDefault("ScrollBarArrowMaxDefault")[0] = new ParameterDefault("Window", "image", "ScrollBarArrowMaxDefault");           			newDefault("ScrollBarArrowMaxOver")[0] = new ParameterDefault("Window", "image", "ScrollBarArrowMaxOver");           			newDefault("ScrollBarArrowMaxDown")[0] = new ParameterDefault("Window", "image", "ScrollBarArrowMaxDown");           			newDefault("ScrollBarArrowMinDefault")[0] = new ParameterDefault("Window", "image", "ScrollBarArrowMinDefault");           			newDefault("ScrollBarArrowMinOver")[0] = new ParameterDefault("Window", "image", "ScrollBarArrowMinOver");   			newDefault("ScrollBarArrowMinDown")[0] = new ParameterDefault("Window", "image", "ScrollBarArrowMinDown");           																					newDefault("ScrollBarImage")[1] = new ParameterDefault("ListBox", "image", "ScrollBarImage");    			newDefault("ScrollBarSliderImage")[1] = new ParameterDefault("ListBox", "image", "ScrollBarSliderImage");   			newDefault("ScrollBarArrowMaxDefault")[1] = new ParameterDefault("ListBox", "image", "ScrollBarArrowMaxDefault");           			newDefault("ScrollBarArrowMaxOver")[1] = new ParameterDefault("ListBox", "image", "ScrollBarArrowMaxOver");           			newDefault("ScrollBarArrowMaxDown")[1] = new ParameterDefault("ListBox", "image", "ScrollBarArrowMaxDown");           			newDefault("ScrollBarArrowMinDefault")[1] = new ParameterDefault("ListBox", "image", "ScrollBarArrowMinDefault");           			newDefault("ScrollBarArrowMinOver")[1] = new ParameterDefault("ListBox", "image", "ScrollBarArrowMinOver");   			newDefault("ScrollBarArrowMinDown")[1] = new ParameterDefault("ListBox", "image", "ScrollBarArrowMinDown");     		  		}				public function newDefault(defaultName:String):Array {			if(defaults[defaultName] == undefined) {				defaults[defaultName] = new Array();			}			return(defaults[defaultName]);		}			public function parseDefaultsXML(defaultsXML:XMLList):void {						var defaultNodes:XMLList = defaultsXML.children();						for(var i:Number = 0; i<defaultNodes.length(); i++) {								// The XML node name				var defaultName:String = defaultNodes[i].name();								// The list of internal defaults				for(var j:Number = 0; j<defaults[defaultName].length; j++) {										var defaultVal:String;										if(defaults[defaultName][j].getAttribute()) {						// Use attribute method						defaultVal = defaultNodes[i].attribute(defaults[defaultName][j].getAttribute());						defaults[defaultName][j].applyTextValue(defaultVal);						types[defaults[defaultName][j].getType()] = true;					} else {						// Use node method						defaultVal = defaultNodes[i];						defaults[defaultName][j].applyTextValue(defaultVal);						types[defaults[defaultName][j].getType()] = true;					}				}			}		}				public function hasDefaults(componentType:String):Boolean {			if(types[componentType]) {				return(true);			} else {				return(false);			}		}				public function applyDefaults(componentType:String, initXML:XML):XML {			var paramXML:XML = initXML;			for (var d in defaults) {				for(var j:Number = 0; j<defaults[d].length; j++) {					if(defaults[d][j].getType() == componentType) {						var defaultSetting:ParameterDefault = defaults[d][j];						if(defaultSetting.exists()) {							if(paramXML.child(defaultSetting.getNodeId()) != undefined) {								// Parameter exists in UIML; leave it							} else {								// Parameter does not exist, append the default value								var addDefault:XML = XML("<"+defaultSetting.getNodeId()+">"+														defaultSetting.textValue()+														"</"+defaultSetting.getNodeId()+">");								paramXML.appendChild(addDefault);							}						}					} 				}			}			return(paramXML);		}	}}