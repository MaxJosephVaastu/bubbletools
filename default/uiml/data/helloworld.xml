<UIML>
	<Theme>
		<TintColor r="0" g="0" b="0" />
		<OutlineColor color="0x666666" /> 
		<BackgroundColor color="0x666666" />
		<Scale mode="fullbleed" />
		<Defaults>
			<ButtonDefaultState image="btn_default.png"/>
			<ButtonOverState image="btn_over.png" />
			<ButtonDownState image="btn_down.png" />
 			<ScrollBarImage image="scrollbar_white_vertical.jpg" />
			<ScrollBarSliderImage image="slider_white_vertical.jpg" />  
			<ScrollBarArrowMaxDefault image="arrow_up.png" />     
			<ScrollBarArrowMaxOver image="arrow_up.png" />      
			<ScrollBarArrowMaxDown image="arrow_up.png" />      
			<ScrollBarArrowMinDefault image="arrow_down.png" />      
			<ScrollBarArrowMinOver image="arrow_down.png" />      
			<ScrollBarArrowMinDown image="arrow_down.png" />
			<PanelButtonDefaultState image="btn_default.png"/>
			<PanelButtonOverState image="btn_over.png"/>  
			<PanelButtonDownState image="btn_down.png"/>     
		</Defaults>
	</Theme>
	<Component type="Window" id="main_window">
		<Parameters>
			<PositionX>0</PositionX>
			<PositionY>0</PositionY>
			<Width>1000</Width>
			<Height>800</Height> 
			<InheritWidth>true</InheritWidth>
			<Image>testpattern.png</Image>
			<TileBackground>true</TileBackground>
			<Color>0xFFEEEEEE</Color>
			<Outline>1</Outline>
			<IconDroppable>true</IconDroppable>
			<Visible>true</Visible>
		</Parameters>
		<Subcomponents>
		  <Component type="TabBar" id="main_nav">
			<Parameters>
				<PositionX>50</PositionX>
				<PositionY>0</PositionY>
				<Width>1000</Width>
				<Height>40</Height>    
				<Outline>1</Outline>
				<Color>0xFFAE6699</Color>
				<Visible>true</Visible>       
				<ListedType type="PanelItem" id="PanelItem">
   					<Parameters>
						<PositionX>0</PositionX>
						<PositionY>0</PositionY>
						<Width>150</Width>
						<Height>20</Height>
						<TextColor>0xFF000000</TextColor>
						<TextWidth>150</TextWidth>
						<FontSize>15</FontSize>
						<TextAlign>center</TextAlign> 
						<TextHeight>20</TextHeight>
						<Outline>0</Outline>
						<ColorOver>0xFF440000</ColorOver>
						<Color>0xFFFFFFFF</Color>
					</Parameters>
				</ListedType>
				<TabBarDirection>right</TabBarDirection>
				<List>
					<Item><Text>test1</Text><Data>test_1</Data></Item>
					<Item><Text>test2</Text><Data>test_2</Data></Item>
					<Item><Text>test3</Text><Data>test_3</Data></Item>
				</List>                          		
			</Parameters>    
		</Component>         
		<Component type="Window" id="status_window">
			<Parameters>
				<PositionX>500</PositionX>
				<PositionY>50</PositionY>
				<Width>200</Width>
				<Height>100</Height>
				<Color>0xFFAE6699</Color>
				<Draggable>false</Draggable>
				<Visible>true</Visible>
				<Stack>false</Stack>
			</Parameters>
			<Subcomponents>
				<Component type="TextDisplay" id="status_text">
					<Parameters>
						<PositionX>5</PositionX>
						<PositionY>5</PositionY>
						<Width>190</Width>
						<Height>90</Height>
						<TextColor>0xFFFFFFFF</TextColor>
						<TextAlign>left</TextAlign>
						<Text>In the AppMainControl class, buttons in the first 2 windows have responders added that update the text in this window.</Text>
						<Selectable>false</Selectable>
					</Parameters>
				</Component>
			</Subcomponents>
		</Component>
		<Component type="Window" id="example_window_1">
			<Parameters>
				<PositionX>20</PositionX>
				<PositionY>100</PositionY>
				<Width>400</Width>
				<Height>500</Height>
				<Color>0xFFADC0F3</Color>
				<TitleBar>true</TitleBar>
				<TitleBarSize>24</TitleBarSize>
				<TitleText>Hello World</TitleText>
				<DropShadow>true</DropShadow>
				<Draggable>true</Draggable>
				<Visible>true</Visible>
				<IconDroppable>true</IconDroppable>
				<Stack>true</Stack> 
				<ScrollVertical>true</ScrollVertical>  
				<ScrollBarArrows>true</ScrollBarArrows> 
				<ScrollBarSize>18</ScrollBarSize>
				<ScrollBarSliderSize>60</ScrollBarSliderSize>     
			</Parameters>
			<Subcomponents>
				<Component type="Button" id="button_window_1">
					<Parameters>
						<PositionX>20</PositionX>
						<PositionY>45</PositionY>
						<Width>100</Width>
						<Height>30</Height>
						<Text>Button A</Text>
					</Parameters>
				</Component>
				<Component type="Icon" id="icon_1">
					<Parameters>
						<PositionX>20</PositionX>
						<PositionY>100</PositionY>
						<Width>64</Width>
						<Height>64</Height>
						<Icon>btn_default.png</Icon>
						<Droppable>true</Droppable>
						<Text>Example Icon</Text>
						<Font>Tahoma</Font>
						<FontSize>12</FontSize>
						<TextColor>0xFF333333</TextColor>
						<Outline>0</Outline>
					</Parameters>
				</Component>
			</Subcomponents>
		</Component>
		<Component type="Window" id="example_window_2">
			<Parameters>
				<PositionX>300</PositionX>
				<PositionY>170</PositionY>
				<Width>300</Width>
				<Height>300</Height>
				<Color>0xFFE9C738</Color>
				<TitleBar>true</TitleBar>
				<TitleBarSize>24</TitleBarSize>
				<TitleText>Example Window</TitleText>
				<DropShadow>true</DropShadow>
				<Draggable>true</Draggable>
				<Visible>true</Visible>
				<IconDroppable>true</IconDroppable>
				<Stack>true</Stack>
			</Parameters>
			<Subcomponents>
				<Component type="ListBox" id="example_list">
					<Parameters>
						<ListedType type="ListItem" id="listitem">
							<Parameters>
								<PositionX>0</PositionX>
								<PositionY>0</PositionY>
								<Width>260</Width>
								<Height>20</Height>
								<TextColor>0xFF222222</TextColor>
								<Color>0xFFFFFFFF</Color>
								<ColorOver>0xFF591F00</ColorOver>
								<ColorDown>0xFF333333</ColorDown>
								<Outline>0</Outline>
							</Parameters>
						</ListedType>
						<PositionX>10</PositionX>
						<PositionY>35</PositionY>
						<Width>280</Width>
						<Height>100</Height>
						<Color>0xFFCCCCCC</Color>
						<ScrollVertical>true</ScrollVertical>
						<ScrollBarArrows>true</ScrollBarArrows>
						<ScrollBarSize>18</ScrollBarSize>
						<ScrollBarSliderSize>60</ScrollBarSliderSize>
						<ScrollBarSliderOutline>0</ScrollBarSliderOutline> 
						<List>
							<Item><Text>list1</Text><Data>test_1</Data></Item>
							<Item><Text>list2</Text><Data>test_2</Data></Item>
							<Item><Text>list3</Text><Data>test_3</Data></Item>   
							<Item><Text>list4</Text><Data>test_4</Data></Item>   
							<Item><Text>list5</Text><Data>test_5</Data></Item>   
							<Item><Text>list6</Text><Data>test_6</Data></Item>   
							<Item><Text>list7</Text><Data>test_7</Data></Item>   
						</List>  
					</Parameters>	
				</Component>    
				<Component type="Button" id="button_window_2">
					<Parameters>
						<PositionX>20</PositionX>
						<PositionY>120</PositionY>
						<Width>100</Width>
						<Height>30</Height>
						<Text>Button B</Text>
					</Parameters>
				</Component>
			</Subcomponents>  
		</Component>
		<Component type="Window" id="example_window_3">
			<Parameters>
				<PositionX>500</PositionX>
				<PositionY>300</PositionY>
				<Width>350</Width>
				<Height>400</Height>
				<Color>0xFFB3BCCE</Color>
				<TitleBar>true</TitleBar>
				<TitleBarSize>24</TitleBarSize>
				<TitleText>Another Window</TitleText>
				<DropShadow>true</DropShadow>
				<Draggable>true</Draggable>
				<Visible>true</Visible>
				<IconDroppable>true</IconDroppable>
				<Stack>true</Stack>  
				<ScrollVertical>true</ScrollVertical>  
				<ScrollBarArrows>true</ScrollBarArrows>
				<ScrollBarArrowsClustered>true</ScrollBarArrowsClustered>  
				<ScrollBarSize>18</ScrollBarSize>
				<ScrollBarSliderSize>60</ScrollBarSliderSize>   
			</Parameters>
				<Subcomponents>
					<Component type="Button" id="button_window_3">
						<Parameters>
							<PositionX>125</PositionX>
							<PositionY>45</PositionY>
							<Width>100</Width>
							<Height>30</Height>
							<Text>Load Image</Text>
						</Parameters>
					</Component>
					<Component type="ImageDisplay" id="random_image">
						<Parameters>
							<PositionX>25</PositionX>
							<PositionY>100</PositionY>
							<Width>300</Width>
							<Height>200</Height>
							<URL>http://upload.wikimedia.org/wikipedia/commons/d/dc/Mech_2_3D.png</URL>
						</Parameters>
					</Component>
				</Subcomponents>          
			</Component>      
		</Subcomponents>
	</Component>
</UIML>