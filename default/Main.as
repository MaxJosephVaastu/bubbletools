package {		// This file must be the main document class used by your FLA.	// The Bubbletools architecture looks for Main.instance() and Main._stage in several places.	// Main.instance() is used as the initial sprite to draw into, and Main._stage	// is requested for its width and height properties. 	import flash.display.Sprite;	import flash.display.Stage;	import flash.display.StageScaleMode;	import flash.display.StageAlign;	import flash.events.*;		// Import your main application class here		import com.application.App;	public class Main extends Sprite {		private static var _instance:Main = null;		public static var _stage:Stage;		public static var _containerWidth:Number = 0;		public static var _containerHeight:Number = 0;				public static function instance():Main {			return _instance;		}		public function Main() {			_instance = this;			_stage = stage;			if(stage) {				stage.scaleMode = StageScaleMode.NO_SCALE;				stage.align = StageAlign.TOP_LEFT;				this.loaderInfo.addEventListener(Event.COMPLETE, startup);			}		}				public function startup(event:Event) {						// Instantiate your main application class here!						new App();		}			}}