package bubbletools.util {	import flash.utils.getQualifiedClassName;	import flash.net.*;	import flash.events.IOErrorEvent;	import flash.events.Event;	import flash.utils.getTimer;		import bubbletools.util.Strings;	public class FrameworkDebug {				private static var _instance:FrameworkDebug;		private var debugConnection:LocalConnection;				public static function instance():FrameworkDebug {			if (FrameworkDebug._instance == null) {				FrameworkDebug._instance = new FrameworkDebug();			}			return FrameworkDebug._instance;		}			public function FrameworkDebug(){						debugConnection = new LocalConnection();			debugConnection.allowDomain("*");			debugConnection.allowDomain("localhost");				}			public static function trace(callingClass, txt:String):void {			var showText:String = "["+getQualifiedClassName(callingClass)+"] "+txt;					showText = Strings.replaceInString(showText, "::", "] [");			_instance.debugConnection.send("playerConnection", "playerMessage", showText);				}				}}