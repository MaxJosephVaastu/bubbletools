laySWF(swfUrl:String):void {			parameters.setSWFUrl(swfUrl);			loadSWF();		}		public function loadSWF():void {			if (parameters.getSWF()) {				parameters.getSWF().addLoadListener(this);				view.setContents(parameters.getSWF().container())				parameters.getSWF().load();			}		}		public function swfLoaded():void {			bubbleEvent("swf_loaded");		}	}}