d():Boolean {			return(arrowsClustered);		}          		// Scrollbar arrow max default image		public function setArrowMaxDefault(arrowMaxDefault:String):void {			this.arrowMaxDefault = arrowMaxDefault;		}		public function getArrowMaxDefault():String {			return(arrowMaxDefault);		}		// Scrollbar arrow max over image		public function setArrowMaxOver(arrowMaxOver:String):void {			this.arrowMaxOver = arrowMaxOver;		}		public function getArrowMaxOver():String {			return(arrowMaxOver);		}   	 	// Scrollbar arrow max down image		public function setArrowMaxDown(arrowMaxDown:String):void {			this.arrowMaxDown = arrowMaxDown;		}		public function getArrowMaxDown():String {			return(arrowMaxDown);		}		// Scrollbar arrow min default image		public function setArrowMinDefault(arrowMinDefault:String):void {			this.arrowMinDefault = arrowMinDefault;		}		public function getArrowMinDefault():String {			return(arrowMinDefault);		}		// Scrollbar arrow min over image		public function setArrowMinOver(arrowMinOver:String):void {			this.arrowMinOver = arrowMinOver;		}		public function getArrowMinOver():String {			return(arrowMinOver);		}   	 	// Scrollbar arrow min down image		public function setArrowMinDown(arrowMinDown:String):void {			this.arrowMinDown = arrowMinDown;		}		public function getArrowMinDown():String {			return(arrowMinDown);		}   	                                	}}